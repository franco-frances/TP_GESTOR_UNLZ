@model GestorEventos.Servicios.Entidades.EventoModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-light" >Crear Evento</h1>

<h4 class="text-light">Ingrese su informacion</h4>
<hr />
<div class="row">
    <div class="col-md-4 form-control"> 
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>Datos del Evento</h2>
            <div class="form-group">

                <input asp-for="IdEvento" class="form-control" type="hidden" value="0" />
                <span asp-validation-for="IdEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreEvento" class="control-label"></label>
                <input asp-for="NombreEvento" class="form-control" />
                <span asp-validation-for="NombreEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEvento" class="control-label"></label>
                <input asp-for="FechaEvento" class="form-control" />
                <span asp-validation-for="FechaEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadPersonas" class="control-label"></label>
                <input asp-for="CantidadPersonas" class="form-control" />
                <span asp-validation-for="CantidadPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoEvento" class="control-label"></label>
                <select asp-for="IdTipoEvento">
                    <option value="1">Despedida de Solteros</option>
                    <option value="2">Despedida de Solteras</option>

                </select>
                <span asp-validation-for="IdTipoEvento" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="IdPersonaAgasajada" class="form-control" type="hidden" value="0" />
                <span asp-validation-for="IdPersonaAgasajada" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="IdUsuario" class="form-control" type="hidden" value="0" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Visible" value="true" type="hidden" />
                    <input class="form-check-input" asp-for="Borrado" value="true" type="hidden" />
                    <input asp-for="IdEstadoEvento" class="form-control" type="hidden" value="2" />

                </label>
            </div>
            <h3>Datos del Agasajado</h3>
            <div class="form-group">

                <input asp-for="IdPersona" class="form-control" type="hidden" value="0" />
                <span asp-validation-for="IdPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="hidden" asp-for="Borrado" value="false" /> 
                </label>
            </div>
            <style>
                /* Estilos para la tabla */
                table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-bottom: 20px; /* Espacio entre la tabla y otros elementos */
                }

                /* Estilos para las filas de la tabla */
                tr {
                    border-bottom: 1px solid #ccc; /* Borde inferior de cada fila */
                }

                /* Estilos para las celdas de la tabla */
                td {
                    padding: 10px; /* Espaciado interno de las celdas */
                    text-align: left; /* Alineación del texto a la izquierda */
                }

                /* Estilos para los checkboxes */
                input[type="checkbox"] {
                    margin-right: 10px; /* Espacio entre el checkbox y el texto */
                    vertical-align: middle; /* Alineación vertical central */
                }

                /* Estilo alternativo para filas */
                tr:nth-child(even) {
                    background-color: #f2f2f2; /* Fondo gris claro para filas pares */
                }
            </style>

            <table>
                <tbody>
                    <h3>Servicios</h3>
                    @foreach (var servicio in Model.listaDeServicios)
                    {
                        <tr>
                            
                            <td>
                                
                                <input type="checkbox" name="Servicio" value="@servicio.IdServicio" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => servicio.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => servicio.PrecioServicio)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
