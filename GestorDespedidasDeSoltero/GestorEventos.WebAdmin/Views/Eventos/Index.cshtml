@model IEnumerable<GestorEventos.Servicios.Entidades.EventoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4" style="color:white">Eventos</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Evento</a>
    </p>

    <table class="table table-bordered table-dark table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Id del Evento
                </th>
                <th>
                    Nombre del Evento
                </th>
                <th>
                    Fecha del Evento
                </th>
                <th>
                    Cantidad de Personas
                </th>
                <th>
                    Id de Tipo de Evento
                </th>
                <th>
                    Id del Condenado
                </th>
                <th>
                    Id del Usuario
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Visible)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Borrado)
                </th>
                <th>
                    Estado del Evento
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEvento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEvento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaEvento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadPersonas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTipoEvento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPersonaAgasajada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Visible)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Borrado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoEvento)
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "Details", new { idEvento = item.IdEvento }, new { @class = "btn btn-sm btn-info mb-1" })
                        <br />
                        <form asp-action="AprobarEvento" method="post" class="d-inline">
                            <input type="hidden" name="idEvento" value="@item.IdEvento" />
                            <input type="submit" value="Aprobar" class="btn btn-success btn-sm" />
                        </form><br />
                        <form asp-action="RechazarEvento" method="post" class="d-inline">
                            <input type="hidden" name="idEvento" value="@item.IdEvento" />
                            <input type="submit" value="Rechazar" class="btn btn-danger btn-sm" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />    
</div>