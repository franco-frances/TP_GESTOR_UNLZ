@model GestorEventos.Servicios.Entidades.Servicio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 style="color:white">Editar Servicio</h1>

<hr />
<div class="row" style="color:white">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.IdServicio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdServicio" class="control-label">Id de Servicio</label>
                <input asp-for="IdServicio" class="form-control" readonly />
                <span asp-validation-for="IdServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioServicio" class="control-label">Precio del Servicio</label>
                <input asp-for="PrecioServicio" class="form-control" />
                <span asp-validation-for="PrecioServicio" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Editar Servicio" class="btn btn-success text-white" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-primary text-white">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
