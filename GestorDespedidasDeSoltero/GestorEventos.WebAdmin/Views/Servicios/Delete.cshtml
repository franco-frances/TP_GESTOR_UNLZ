@model GestorEventos.Servicios.Entidades.Servicio

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 style="color:white">¿Estas seguro de querer borrar esto?</h1>
<br />
<div>
    <h4 style="color:white">Datos del Servicio a Borrar</h4>
    <hr />
    <dl class="row" style="color:white">
        <dt class="col-sm-2">
            Id del Servicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdServicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            Precio del Servicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioServicio)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete" asp-route-id="@Model.IdServicio">
        <input type="submit" value="Borrar Servicio" class="btn btn-danger" /> |
    </form>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-primary text-white">Volver a la Lista</a>
</div>
